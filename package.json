{
  "name": "follow-path",
  "version": "1.0.3",
  "description": "Follow path code challenge app written in TypeScript",
  "main": "./dist/src/main.js",
  "scripts": {
    "start": "tsc && node ./dist/src/main.js",
    "build": "tsc",
    "prettier:check": "prettier --check ./src",
    "prettier:write": "prettier --write ./src",
    "lint": "eslint ./src/**",
